// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String
  years Int?
  seleccion Seleccion?
  incomes Income[]
  expense Expense[]
  savingplan Savingplan[]
}

model Seleccion {
  id Int @id @default(autoincrement())
  boton Boton[]
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
}

model Boton {
  id Int @id @default(autoincrement())
  text String 
  seleccionId Int
  seleccion Seleccion @relation(fields: [seleccionId], references: [id])
}

model Income {
  id Int @id @default(autoincrement())
  name String
  amount String
  frequency String
  paymentday String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Expense {
  id Int @id @default(autoincrement())
  name String
  amount String
  frequency String
  billingday String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Savingplan {
  id Int @id @default(autoincrement())
  goal String
  frequency String
  selecciondos Selecciondos?
  total String
  userId Int 
  user User @relation(fields: [userId], references: [id])
}

model Selecciondos {
  id Int @id @default(autoincrement())
  botondos Botondos[]
  savingplanId Int @unique
  savingplan Savingplan @relation(fields: [savingplanId], references: [id])

}

model Botondos {
  id Int @id @default(autoincrement())
  text String
  selecciondosId Int
  selecciondos Selecciondos @relation(fields: [selecciondosId], references: [id])
}